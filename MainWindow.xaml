<Window x:Class="ReadExcelUsingSylvan.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReadExcelUsingSylvan"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid Name="MainDataGrid" AutoGenerateColumns="True" Margin="10,10,10,91" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible" EnableColumnVirtualization="True" EnableRowVirtualization="True" VirtualizingPanel.VirtualizationMode="Recycling" VirtualizingStackPanel.IsVirtualizing="True" VirtualizingPanel.IsVirtualizingWhenGrouping="True"/>
        <Button x:Name="SelectFileButton" Content="Select File" Width="100" Height="35" HorizontalAlignment="Center" VerticalAlignment="Bottom" Click="SelectFileButton_Click"/>
    </Grid>
</Window>
